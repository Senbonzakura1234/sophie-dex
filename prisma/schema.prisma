// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

enum RECIPE_TYPE {
   BEGINNER_RECIPES
   GROWTH_RECIPES
   HOPE_RECIPES
   DREAM_RECIPES
   MYSTERY_RECIPES
}

enum COLOR {
   GREEN
   BLUE
   WHITE
   YELLOW
   RED
}

enum RELATED_CATEGORY {
   PLANT
   MEDICINE_MAT
   WATER
   IMPORTANT
   BOMB
   MEDICINE
   FOOD
   SWEETS
   CLOTH
   NEUTRALIZER
   WEAPON_MAT
   ARMOR_MAT
   WEAPON
   ARMOR
   ACCESSORY
   POISON_MAT
   SECRET_POWER
   FUEL
   THREAD
   WOOD
   ELIXIR
   ORE
   GUNPOWDER
   GEM
   METAL
   CLAY
   ANIMAL
   INGREDIENT
   PAPER
   MAGIC_ITEM
}

enum CATEGORY {
   ACCESSORY
   ARMOR
   ATK_ITEM
   BUFF_ITEM
   DE_BUFF_ITEM
   HEAL_ITEM
   WEAPON

   MATERIAL
   BOOK

   EXPLORATION
   MACHINE
   KEY_ITEM

   SYNTHESIS
}

type RelatedCategories {
   name  RELATED_CATEGORY
   count Int
}

type TRAIT_LINK {
   id    String @db.ObjectId
   index Int
   name  String
}

type MergeTrait {
   consist TRAIT_LINK[]
}

generator client {
   provider        = "prisma-client-js"
   previewFeatures = ["orderByNulls"]
}

datasource db {
   provider = "mongodb"
   url      = env("DATABASE_URL")
}

model Effect {
   id          String @id @default(auto()) @map("_id") @db.ObjectId
   index       Int
   name        String
   description String
}

model Trait {
   id          String       @id @default(auto()) @map("_id") @db.ObjectId
   index       Int
   name        String
   description String
   categories  CATEGORY[]
   mergeFrom   MergeTrait[]
}

model Item {
   id                String              @id @default(auto()) @map("_id") @db.ObjectId
   index             Int
   name              String
   description       String?
   color             COLOR
   relatedCategories RelatedCategories[]
   category          CATEGORY
   level             Int
   recipeType        RECIPE_TYPE?
   traitPresent      TRAIT_LINK?
}
